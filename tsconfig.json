{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": [
    ".eslintrc.js",
    ".storybook/*",
    "config/*",
    "dist/*",
    "node_modules/*",
    "scripts/*",
    "storybook-static/*",
    "postcss.config.js",
    "rollup.config.js"
  ],
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
