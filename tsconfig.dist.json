{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "moduleResolution": "Bundler",
    "noEmit": false,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    ".storybook/*",
    "config/*",
    "dist/*",
    "e2e/*",
    "node_modules/*",
    "scripts/*",
    "src/cypress/*",
    "stories/*",
    "storybook-static/*",
    ".eslintrc.cjs",
    "rollup.config.js",
    "**/*.test.ts"
  ]
}
